pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'maven3'
        nodejs 'node25'
    }

    environment {
        TEST_PATH = '/Users/pavank_500328/Downloads/EmployeeManagementDetails'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pavanKumarKanthamraju/Employment-Details.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir("${env.TEST_PATH}") {
                    sh '''
                    echo "ğŸ“¦ Installing dependencies..."
                    npm install
                    '''
                }
            }
        }

        stage('Install wm-unit-test-generator') {
            steps {
                // âš ï¸ This will fail if your registry doesn't have this package
                // You can remove this if using local `npm link` instead
                sh 'npm install -g wm-unit-test-generator || true'
            }
        }

        stage('Link wm-unit-test-generator') {
            steps {
                script {
                    sh '''
                    echo "ğŸ”— Linking local wm-unit-test-generator CLI..."
                    cd /Users/pavank_500328/Downloads/llm-test-gen
                    npm link
                    '''
                }
            }
        }

           stage('Run Unit Tests') {
    steps {
        dir("${env.TEST_PATH}") {
            sh '''
            echo "ğŸ§ª Running unit tests via wm-ut-gen..."
            wm-ut-gen run-tests --path=${TEST_PATH} || true

            echo "âœ… Checking for test report and coverage..."
            if [ -f "utreports/index.html" ]; then
              echo "âœ… Found test report at utreports/index.html"
            else
              echo "âš ï¸ Test report not found in utreports/"
            fi

            if [ -d "coverage" ]; then
              echo "âœ… Found coverage folder."
            else
              echo "âš ï¸ No coverage folder found."
            fi
            '''
        }
    }

    post {
        always {
            echo "ğŸ“Š Archiving test and coverage reports..."
            script {
                // Archive utreports HTML report
                def reportExists = fileExists("${env.TEST_PATH}/utreports/index.html")
                def coverageExists = fileExists("${env.TEST_PATH}/coverage")

                if (reportExists) {
                    archiveArtifacts artifacts: 'utreports/**/*', fingerprint: true
                    echo "ğŸ“¦ âœ… Test report archived successfully."
                } else {
                    echo "âš ï¸ No test report found to archive."
                }

                if (coverageExists) {
                    archiveArtifacts artifacts: 'coverage/**/*', fingerprint: true
                    echo "ğŸ“¦ âœ… Coverage report archived successfully."
                } else {
                    echo "âš ï¸ No coverage folder found to archive."
                }
            }

            // Optionally publish HTML directly to Jenkins UI
            publishHTML(target: [
                allowMissing: true,
                keepAll: true,
                alwaysLinkToLastBuild: true,
                reportDir: "${env.TEST_PATH}/utreports",
                reportFiles: 'index.html',
                reportName: 'ğŸ§ª Unit Test Report'
            ])
        }
    }
}



        // stage('Package Build') {
        //     steps {
        //         sh '''
        //         echo "ğŸ—ï¸ Packaging Maven project..."
        //         mvn clean package -DskipTests
        //         '''
        //     }
        // }

        // stage('Archive WAR') {
        //     steps {
        //         archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
        //     }
        // }
    }

    post {
        success {
            echo 'âœ… Build and Tests Succeeded!'
        }
        failure {
            echo 'âŒ Build or Tests Failed!'
        }
    }
}



