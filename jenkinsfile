pipeline {
    agent any

   tools {
    jdk 'java17'
    maven 'maven3'
    nodejs 'node25'
}


    stages {
        
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pavanKumarKanthamraju/Employment-Details.git'
            }
        }
  stage('Build UI') {
            steps {
                dir('frontend') { // adjust path if needed
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
    
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}
