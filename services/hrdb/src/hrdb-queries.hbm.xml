<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <sql-query name="userNameCount">
        <![CDATA[
        SELECT COUNT(*) AS USERNAME_COUNT FROM EMPLOYEE WHERE USERNAME = :username
        ]]>
    <query-param name="username" type="java.lang.String"/>
    </sql-query>

    <sql-query name="userNameCount__count">
        <![CDATA[
        select count(*) from (SELECT COUNT(*) AS USERNAME_COUNT FROM EMPLOYEE WHERE USERNAME = :username) wmTempTable
        ]]>
    <query-param name="username" type="java.lang.String"/>
    </sql-query>
</hibernate-mapping>
